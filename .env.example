# Central Log Dashboard - Environment Variables Template
# IMPORTANT: Copy this file to .env and fill in your actual values
# .env is excluded from git for security

# ==================== Server Configuration ====================

# Server port (default: 5100)
PORT=5100

# Environment: 'production' or 'test'
ENVIRONMENT=production

# ==================== Security Settings ====================

# Flask secret key (MUST change in production!)
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here-change-me

# API token for agents (MUST change in production!)
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
API_TOKEN=your-api-token-here-change-me

# ==================== Database Configuration ====================

# Database paths (optional, defaults to data/dashboard.db and data/dashboard_test.db)
# DATABASE_PATH=/path/to/production/dashboard.db
# TEST_DATABASE_PATH=/path/to/test/dashboard_test.db

# ==================== Virtual Environment ====================

# Path to virtual environment (optional)
# VENV_PATH=/opt/dashboard/log_central_venv

# ==================== User Accounts ====================

# Admin account credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production

# Test account credentials
TEST_USERNAME=test
TEST_PASSWORD=change-me-in-production

# ==================== Logging Configuration ====================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# ==================== Gunicorn Configuration (Production) ====================

# Number of worker processes (optional, defaults to CPU * 2 + 1)
# GUNICORN_WORKERS=4

# Worker timeout in seconds
# GUNICORN_TIMEOUT=120
