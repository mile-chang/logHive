# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF (for Linux)
*.sh text eol=lf

# Windows scripts should use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf
*.cmd text eol=crlf

# Python files should use LF (for Linux deployment)
*.py text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Binary files (do not modify)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.db binary
*.sqlite binary
*.sqlite3 binary
